<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.enriquebecerram.partyapp.InvitacionesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C9DDEB">

    <RelativeLayout
        android:id="@+id/LayoutNuevo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnNuevoEvento"
            style="@style/StyleButton"
            android:text="Nuevo Evento"

            android:layout_width="180dp"
            android:layout_height="40dp"

            android:layout_centerInParent="true"
            android:layout_marginTop="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/element3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LayoutNuevo"
        >

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView3"
            android:layout_margin="30dp"/>

        <TextView
            android:id="@+id/txtEvento3"
            style="@style/StyleText"
            android:text="Nombre del evento"

            android:layout_toRightOf="@id/imageView3"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/txtCreador3"
            style="@style/StyleText"
            android:text="Creador del evento"

            android:layout_toRightOf="@id/imageView3"
            android:layout_below="@id/txtEvento3"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txtFecha3"
            style="@style/StyleText"
            android:text="10/03/2017"
            android:layout_toRightOf="@id/txtEvento3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/btnVer3"
            style="@style/StyleButton"
            android:text="Ver"

            android:layout_width="100dp"
            android:layout_height="40dp"

            android:layout_below="@id/txtCreador3"
            android:layout_toRightOf="@id/imageView3"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btnRechazar3"
            style="@style/StyleButton"
            android:text="Rechazar"

            android:layout_width="100dp"
            android:layout_height="40dp"

            android:layout_below="@id/txtCreador3"
            android:layout_toRightOf="@id/btnVer3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
